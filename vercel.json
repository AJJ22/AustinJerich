{
  "buildCommand": "npm install --prefix ./api && cd frontend && npm install && npm run build",
  "outputDirectory": "frontend/build",
  "functions": {
    "api/index.mjs": {}
  },
  "includeFiles": "api/**",
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/index.mjs"
    },
    {
      "src": "/(?!(api|static|manifest|robots|favicon))(.*)",
      "dest": "/index.html"
    }
  ]
}